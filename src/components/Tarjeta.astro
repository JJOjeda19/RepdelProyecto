---
// C O M P O N E N T E   T A R J E T A S

// HERRAMIENTAS
import { Icon } from 'astro-icon/components'

interface Props {
    el_icono?: string
    titulo:string
    descripcion?:string    
}
const { el_icono, titulo, descripcion } = Astro.props
---

<!-- CODIGO -->
<div>
    <div class="flex items-center">
        { el_icono
        ? <Icon name={el_icono} width={24} height={24}/>
        : <></>
        }
        <h2 class="pl-[6px]">{ titulo }</h2>
    </div>
        {descripcion
        ? <p class="pl-[30px]">{ descripcion }</p>
        : <></>
        }
</div>

<style>
    img {
	width: 100%;
	height: 100px;
	object-fit: cover;
    }
    .tarjeta-con-imagen {
        flex-basis: 200px;
    }
</style>